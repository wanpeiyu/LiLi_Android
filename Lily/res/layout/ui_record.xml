<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="90dp" >

    <RelativeLayout 
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center">
         <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play" />
    </RelativeLayout>
   
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1" >

            <TextView
                android:id="@+id/text_record_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="2015年5月16日录音" />

            <TextView
                android:id="@+id/text_record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_record_title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="20:55" />
            
        </RelativeLayout>
        
         <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1" >

             <TextView
                 android:id="@+id/text_record_conut"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:text="播放：555454" />

             <TextView
                 android:id="@+id/text_record_filename"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBaseline="@+id/text_record_conut"
                 android:layout_alignBottom="@+id/text_record_conut"
                 android:layout_marginLeft="20dp"
                 android:layout_toRightOf="@+id/text_record_conut"
                 android:text="光辉岁月.mp3" />
            
        </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1" >

             <TextView
                 android:id="@+id/text_record_play"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:text="播放" />

             <TextView
                 android:id="@+id/text_record_delete"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="15dp"
                 android:layout_toRightOf="@+id/text_record_play"
                 android:text="删除" />

             <TextView
                 android:id="@+id/text_record_download"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="15dp"
                 android:layout_toRightOf="@+id/text_record_delete"
                 android:text="下载" />

         </RelativeLayout>
        
          <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe3e4e5" />
    </LinearLayout>
</LinearLayout>
